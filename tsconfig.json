{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist" // Output directory for compiled JavaScript files
  },
  "include": [
    "src/**/*" // Adjust to include your source files
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "**/*.spec.ts", // Exclude test files if you have any
    "**/*.test.ts" // Exclude test files if you have any
  ]
}
